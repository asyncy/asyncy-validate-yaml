#!/usr/bin/env node

app = require('../lib/app')

if (process.argv[2] == 'parse') {
  args = JSON.parse(process.argv[3])
  res = app.parse(args['yaml'], args['schema'])

  if (res.valid) {
    process.stdout.write(res.yaml)
    process.exit(0)

  } else {
    process.stderr.write(res.errorsText)
    process.exit(1)
  }

}
